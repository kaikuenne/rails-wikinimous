<!DOCTYPE html>
<html>
  <head>
    <title>RailsWikinimous</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar">
      <div class="container">
        <h1>Wiki</h1>
        <div class="nav-buttons">
          <%= link_to "New Article", new_article_path, {class: "btn btn-primary"} %>
          <%= link_to "Home", articles_path, {class: "btn btn-light"} %>
        </div>
      </div>
    </div>
    <div class="wrapper">
      <div class="container">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
